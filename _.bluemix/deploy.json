{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "#/messages/deploy.title",
    "description": "deploy.description",
    "longDescription": "#/messages/deploy.longDescription",
    "type": "object",
    "properties": {
        "region": {
            "description": "The bluemix region",
            "type": "string"
        },
        "organization": {
            "description": "The bluemix org",
            "type": "string"
        },
        "space": {
            "description": "The bluemix space",
            "type": "string"
        },
        "app-name": {
            "description": "#/messages/deploy.appDescription",
            "type": "string",
            "pattern": "\\S"
        }
    },
    "required": [
        "region",
        "organization",
        "space",
        "app-name"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "#/messages/deploy.appName",
            "key": "app-name"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": [
                "15%",
                "28%",
                "28%",
                "28%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": "#/messages/region"
                },
                {
                    "type": "label",
                    "title":  "#/messages/organization"
                },
                {
                    "type": "label",
                    "title":  "#/messages/space"
                },
                {
                    "type": "label",
                    "title": "#/messages/prodStage"
                },
                {
                    "type": "select",
                    "key": "region"
                },
                {
                    "type": "select",
                    "key": "organization"
                },
                {
                    "type": "select",
                    "key": "space",
                    "readonly": false
                }
            ]
        }
    ]
}
